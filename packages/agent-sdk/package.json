{
  "name": "@lingyun/agent-sdk",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Headless LingYun agent runtime for Node.js (tools + skills + plugins).",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build && mocha --ui tdd ./dist/test/suite/*.test.js",
    "test:e2e": "pnpm run build && mocha --ui tdd --timeout 300000 ./dist/test/e2e/*.test.js"
  },
  "dependencies": {
    "@lingyun/core": "workspace:*",
    "@ai-sdk/openai-compatible": "^2.0.2",
    "ai": "^6.0.6",
    "glob": "^13.0.0",
    "undici": "^7.18.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.16",
    "mocha": "^11.7.5",
    "typescript": "^5.3.3"
  }
}
